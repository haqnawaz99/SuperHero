@page "/superheroes"
@inject ISuperHeroService  superHeroService
<h3>Super Heroes</h3>

@if(heroes.Count == 0)
{<span>Loading.....</span> }
else
{ 
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hero Name</th>
                <th>Comic</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var hero in heroes)
                {
            <tr>
                <td>@hero.FirstName</td>
                <td>@hero.LastName</td>
                <td>@hero.HeroName</td>
                <td>@hero.Comic</td>
            </tr>
                    
                }
        </tbody>

    </table>
}


@code {     
    List<SuperHero> heroes = new List<SuperHero>();

    protected override async Task OnInitializedAsync()
    {
        heroes = await superHeroService.GetSuperHeroes();
    }
}
